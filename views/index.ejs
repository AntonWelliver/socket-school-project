<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <script src="https://kit.fontawesome.com/901297bff2.js"></script>
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
            integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" type="text/css" href="style.css" />
        <script
            defer
            src="http://localhost:3000/socket.io/socket.io.js"
        ></script>

        <title>Chat App</title>
    </head>
    <body>
        <div>
            <u><h1 class="text-center">Chat Application</h1></u>
        </div>
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                    <form
                        class="d-flex justify-content-center"
                        action="/room"
                        method="POST"
                    >
                        <div class="form-group col-md-6">
                            <label for="room">Room</label>
                            <input
                                type="text"
                                class="form-control"
                                name="room"
                                placeholder="Write roomname..."
                            />
                        </div>
                        <div class="d-flex align-items-center mt-3">
                            <button type="submit">Go</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <br />
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-6">
                    <div class="d-flex justify-content-center">
                        <div class="border w-50 text-center">
                            <% chatRooms.forEach(chatRoom => { %>
                            <div><%= chatRoom %></div>
                            <button>
                                <a href="/<%= chatRoom %>">Join</a>
                            </button>
                            <form
                                class="my-2"
                                action="/<%= chatRoom %>"
                                method="POST"
                            >
                                <input
                                    type="hidden"
                                    name="deleteButton"
                                    value="delete"
                                />
                                <button type="submit" class="btn btn-danger">
                                    Del
                                </button>
                            </form>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
